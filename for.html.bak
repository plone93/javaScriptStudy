  <title>for</title>

  <script>
  //1~10까지의 합을 구하시오
	var i, j = 0;
	for(i=1; i<=10; i++){
		j = j+i;
		}
	document.write(j+"<br/>");

  </script>

  <script>
  //1부터 20까지의 짝수의 합을 구하시오
  	var i, sum = 0;
	for(i=1; i<=20; i++){
		if(i%2 == 0){
			sum = sum+i;
		}
	}
	document.write(sum+"<br/>");
  </script>
